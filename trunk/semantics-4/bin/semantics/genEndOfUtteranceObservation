#!/bin/bash

######################################################################################
# train
######################################################################################
$SRC_DIR/genEndOfUtteranceObs.py --dirIn=$DATA_TRN/ho \
        --dirOut=$DATA_TRN \
        --conceptMap=$CONCEPT_MAP \
        --wordMap=$S1_MAP
# train - txt
$SRC_DIR/genEndOfUtteranceObs.py --dirIn=$DATA_TXT_TRN/ho \
        --dirOut=$DATA_TXT_TRN \
        --conceptMap=$CONCEPT_MAP_TXT \
        --wordMap=$S1_MAP_TXT

######################################################################################
# heldout
######################################################################################
$SRC_DIR/genEndOfUtteranceObs.py --dirIn=$DATA_HLDT/ho \
        --dirOut=$DATA_HLDT \
        --conceptMap=$CONCEPT_MAP \
        --wordMap=$S1_MAP
# heldout - txt
$SRC_DIR/genEndOfUtteranceObs.py --dirIn=$DATA_TXT_HLDT/ho \
        --dirOut=$DATA_TXT_HLDT \
        --conceptMap=$CONCEPT_MAP_TXT \
        --wordMap=$S1_MAP_TXT

######################################################################################
# test
######################################################################################
$SRC_DIR/genEndOfUtteranceObs.py --dirIn=$DATA_TST/ho \
        --dirOut=$DATA_TST \
        --conceptMap=$CONCEPT_MAP \
        --wordMap=$S1_MAP
# test - txt
$SRC_DIR/genEndOfUtteranceObs.py --dirIn=$DATA_TXT_TST/ho \
        --dirOut=$DATA_TXT_TST \
        --conceptMap=$CONCEPT_MAP_TXT \
        --wordMap=$S1_MAP_TXT


